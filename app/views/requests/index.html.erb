<h1>Listing Requests to Me</h1>

<table>
  <thead>
    <tr>
      <th>Requester</th>
      <th>Requested book</th>
      <th>Requested</th>
      <th>Requester book</th>
      <th>Accepted</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests_to_me.each do |request| %>
      <tr>
        <td><%= request.requester %></td>
        <td><%= request.requested_book %></td>
        <td><%= request.requested %></td>
        <td><%= request.requester_book %></td>
        <td><%= request.accepted %></td>
        <td><%= link_to 'Show', request %></td>
        <td><%= link_to 'Edit', edit_request_path(request) %></td>
        <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

