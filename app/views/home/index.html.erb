<ul class="collection with-header">
    <li class="collection-header"><h3><b>Books on <i>Shelf</i></b></h3></li>
    <% @shelf.each do |book| %>
        <li class="collection-item"><div><h4><b><%= book.title %></b>, <%= book.author %></h4><%= link_to "want it!", new_request_path(:requester => current_user.id, :requested_book => book.id,
                                 :requested => book.user_id) %></div></li>
    <% end %>
</ul>